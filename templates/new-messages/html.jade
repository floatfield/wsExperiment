doctype html
html(lang="en")
    head
        title= "Системное уведомление"
    body
        style
            | #page-bottom {background-image: url(#{images}back_op_025.png), url(#{images}back_op_075.png),url(#{images}lines_footer.png), linear-gradient(#cf1f36,#9c1022);}
            | #page-top {background-image: url(#{images}back.png);}
        #page-wrapper
            #page-top.page_container
                #logo
                    a
                        img#logo-image(src=images + 'logo.png')
            #page-middle
                #sub-nav-container.page_container
                    #sub-nav
                        #sub-nav-cell-left.sub-nav-cell
                            = "Уведомление"
                        #sub-nav-cell-right.sub-nav-cell
                #content.page_container
                    if correspondences.length > 0
                        div
                            h1 Новые сообщения!
                            ul
                                each corr in correspondences
                                    li #{corr.count} сообщений по запросу #{corr.name}
                    if requests.length > 0
                        div
                            h1 Новые запросы!
                            ul
                                each tuple in requests
                                    li
                                        a(href="#{tuple.link}") #{tuple.name}
        #page-bottom
            #footer.page_container
                .footer-row
                    .left-cell
                        img#logo-image-footer(src=images + 'logo_footer.png')
                    .right-cell